[{lager, [
  {colored, true},
  {handlers, [
    {lager_file_backend, [{file, "log/info.log"}, {level, info}]},
    {lager_file_backend, [{file, "log/console.log"}, {level, debug}]}
  ]},
  {extra_sinks,
   [
    {verbose_lager_event,
     [{handlers,
       [{lager_file_backend,
         [{file, "log/verbose.log"},
          {level, info}
         ]
        }]
      },
      {async_threshold, 500},
      {async_threshold_window, 100},
      {error_logger_hwm, 100}]
    }]
  }
]}].
